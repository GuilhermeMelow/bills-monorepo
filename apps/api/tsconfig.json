{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "paths": {
    "@/*": ["./src/*"]
  },
  "exclude": ["node_modules"],
  "removeComments": true,
  "preserveConstEnums": true
}
